########################
# BEHAVIOURAL SETTINGS #
########################

# no title bars, no borders
default_border none
default_floating_border none

# always open messaging clients on workspace 2
assign [class="Slack"] workspace $2
assign [class="discord"] workspace $2
assign [class="Messenger for Desktop"] workspace $2

# always open POSTman on workspace 3
assign [class="Postman"] workspace $3

# always open web browsers on workspace 4
assign [class="Firefox"] workspace $4
assign [class="Google-chrome"] workspace $4

# always open spotify to workspace 5
for_window [class="Spotify"] move to workspace $5

# gpick should always be floating
for_window [class="Gpick"] floating enable

# make active window the one the mouse is on
focus_follows_mouse yes

# global gaps settings
gaps outer 28
gaps inner 7

